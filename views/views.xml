<odoo>
    <data>
        <!--Acciones-->
        <record model="ir.actions.act_window" id="buscar_libros">
            <field name="name">Buscar libros</field>
            <field name="res_model">libros.libro</field>
            <field name="view_mode">tree,form</field>
        </record>
    
        <record model="ir.actions.act_window" id="buscar_alumnos">
            <field name="name">Buscar alumnos</field>
            <field name="res_model">res.users</field>
            <field name="view_mode">tree,form</field>
        </record>
    
        <!--Menu de arriba-->
        <menuitem name="Libros" id="main_menu"/>
    
        <!--Menus de la izquierda-->
        <menuitem name="Libros" id="menu_libros" parent="main_menu"/>
        <menuitem name="Gestionar libros" id="menu_gestionar_libros" parent="menu_libros" action="buscar_libros"/>
    
        <menuitem name="Grupos y alumnos" id="menu_grupos_y_alumnos" parent="main_menu"/>
        <menuitem name="Gestionar grupos" id="menu_gestionar_grupos" parent="menu_grupos_y_alumnos" action="buscar_libros"/>
        <menuitem name="Gestionar alumnos" id="menu_gestionar_alumnos" parent="menu_grupos_y_alumnos" action="buscar_alumnos"/>
    </data>
</odoo>