<odoo>
  <data>
    <!--Acciones-->
    <record model="ir.actions.act_window" id="libros.action_window">
      <field name="name">Libros</field>
      <field name="res_model">libros.libro</field>
      <field name="view_mode">tree,form</field>
    </record>
    
    <!--Menu de arriba-->
    <menuitem name="Libros" id="main_menu"/>
    
    <!--Menus de la izquierda-->
    <menuitem name="Libros" id="menu_libros" parent="main_menu"/>
    <menuitem name="Gestionar libros" id="menu_gestionar_libros" parent="menu_libros" action="libros.action_window"/>
    
    <menuitem name="Grupos y alumnos" id="menu_grupos_y_alumnos" parent="main_menu"/>
    <menuitem name="Gestionar grupos" id="menu_gestionar_grupos" parent="menu_grupos_y_alumnos" action="libros.action_window"/>
    <menuitem name="Gestionar alumnos" id="menu_gestionar_alumnos" parent="menu_grupos_y_alumnos" action="libros.action_window"/>
  </data>
</odoo>