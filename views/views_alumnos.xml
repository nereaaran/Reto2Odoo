<odoo>
    <data>
        <!--Tree-->
        <record model="ir.ui.view" id="alumnos_tree_view">
            <field name="name">alumnos.tree</field>
            <field name="model">res.users</field>
            <field name="inherit_id" ref="base.view_users_tree"/>
            <field name="arch" type="xml">
                <field name="login" position="after">
                    <field name="dni" string="DNI"/>
                    <field name="fechaNacimiento" string="Fecha de nacimiento"/>
                    <field name="active"/>
                </field>
            </field>
        </record>
        
        <!--Form-->
        <record model="ir.ui.view" id="alumnos_form_view">
            <field name="name">alumnos.form</field>
            <field name="model">res.users</field>
            <field name="priority" eval="1"/>
            <field name="arch" type="xml">
                <form string="Crear alumno">
                    <sheet>
                        <separator string="Datos personales" colspan="2"/>
                        <group>
                            <field name="name"/>
                            <field name="dni"/>
                            <field name="fechaNacimiento"/>
                        </group>
                        <group>
                        <separator string="Datos del usuario" colspan="2"/>
                            <field name="login"/>
                            <field name="password"/>
                            <field name="active"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        
        <!--Search-->
        <record model="ir.ui.view" id="course_search_view">
            <field name="name">alumnos.search</field>
            <field name="model">res.users</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="login"/>
                    <field name="dni"/>
                </search>
            </field>
        </record>
    </data>
</odoo>