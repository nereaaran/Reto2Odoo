<odoo>
    <template id="libro_report_template">
        <t t-call="report.html_container">
            <t t-call="report.external_layout">
                <t t-value="bool(docs.mapped('id'))" t-set="show_libro"/>
                <!--><t t-value="True" t-set="show_project"/><-->
                <div class="page">
                    <div class="oe_structure"/>
                    
                    <div class="row">
                        <div class="col-md-12">
                            <table class="table table-condensed">
                                <thead>
                                    <tr>
                                        <th>Titulo</th>
                                        <th>Autor</th>
					<th>ISBN</th>
					<th>Cantidad Disponible</th>
					<th>Descargable</th>
				    </tr>
                               </thead>
                               <tbody>
                                    <t t-foreach="docs" t-as="t">
					<tr>
                                            <td>
                                            	<span t-field="t.name"/>
                                            </td>
					    <td>
						<span t-field="t.autor"/>
					    </td>
					    <td>
						<span t-field="t.isbn"/>
					    </td>
                                            <td>
                                               <span t-field="t.cantidad_disponible"/>
                                            </td> 
                                            <td>
                                               <span t-field="t.descargable"/>
                                            </td>
                                        </tr>
                                    </t>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <div class="oe_structure"/>
                </div>
            </t>
        </t>

    </template>

    <report id="libro_report"
            model="libros.libro"
            string="Project Progress"
            report_type="qweb-pdf"
            name="libro.libro_report_template"
            file="libro_report_template"
    />
</odoo>
